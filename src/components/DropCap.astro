---
import type { HTMLTag } from 'astro/types';

interface Props {
    text: string;
    letter: string;
}

const { text, letter } = Astro.props;
const SpanElement = 'span' as HTMLTag;
---

<SpanElement class:list={['drop-cap']} data-drop-cap={letter}>
    <span>{letter}</span>{text}
</SpanElement>

<style>
    .drop-cap {
        /* font-variant: small-caps; */
        font-weight: 700;
        letter-spacing: .15em;

        span {
            float: left;
            font-family: var(--type-font-family-title);
            font-size: var(--type-font-size-xl);
            font-weight: 400;
            line-height: 1;
            margin-block-end: -0.25em;
            margin-inline-end: 0.03em;
            transform: translateY(-0.15em);
        }
    }
</style>
