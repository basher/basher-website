---
import { Image } from 'astro:assets';
import basher from '../images/basher.webp';
import Title from '../components/Title.astro';
---

<section class="wrapper--fullbleed">
    <div class="stack--gutter-xl">
        <Title headingLevel="2" headingText="rock star" id="rockstar" tabindex="-1" />

        <p class="u-center">
            <Image src={basher} alt="cool headshot of me on stage"/>
        </p>

        <div class="grid">
            <figure>
                <video poster="images/lipstick.webp" controls preload="none" aria-labelledby="video1">
                    <source src="media/lipstick.webm" type="video/webm" />
                    Sorry. Your browser does not support the WEBM video format.
                </video>
                <figcaption id="video1">&ldquo;lipstick&rdquo; by bushbaby (promo video, 2004)</figcaption>
            </figure>
            <div class="stack">
                <figure>
                    <audio controls preload="none" aria-labelledby="audio1">
                        <source src="media/tinsel_town.mp3" />
                        <source src="media/tinsel_town.ogv" />
                    </audio>
                    <figcaption id="audio1">&ldquo;tinsel town&rdquo; by bushbaby (single, 2003)</figcaption>
                </figure>
                <figure>
                    <audio controls preload="none" aria-labelledby="audio2">
                        <source src="media/skinny.mp3" />
                        <source src="media/skinny.ogv" />
                    </audio>
                    <figcaption id="audio2">&ldquo;skinny&rdquo; by bushbaby (single, 2002)</figcaption>
                </figure>
                <figure>
                    <audio controls preload="none" aria-labelledby="audio3">
                        <source src="media/platform_nine.mp3" />
                        <source src="media/platform_nine.ogv" />
                    </audio>
                    <figcaption id="audio3">&ldquo;platform nine&rdquo; by bushbaby (from the album "space corps", 2001)</figcaption>
                </figure>
                <figure>
                    <audio controls preload="none" aria-labelledby="audio4">
                        <source src="media/dreaming_day.mp3" />
                        <source src="media/dreaming_day.ogv" />
                    </audio>
                    <figcaption id="audio4">&ldquo;dreaming day&rdquo; by bushbaby (from the ep "medicine", 1999)</figcaption>
                </figure>
            </div>
        </div>

        <p class="u-center">To listen to bushbaby's full catalog, please visit our <a href="https://www.youtube.com/@bushbaby_rocks">YouTube channel</a>.</p>
    </div>
</section>

<style>
    .wrapper--fullbleed {
        background: url('/images/bg.rockstar.webp') no-repeat 50% 100% fixed;
        background-blend-mode: multiply;
        background-color: oklch(from var(--color-link) l c h / 50%);
        background-size: cover;
        padding: var(--gutter-clamp-xl);
    }

    .wrapper--fullbleed:has(:target) {
        animation: var(--animation-glow) glow;
    }

    .wrapper--fullbleed > [class*='stack'] {
        background: oklch(from var(--color-background) l c h / 75%);
        border-radius: var(--border-radius-m);
        box-shadow: 0 0 0.75rem var(--color-background);
        padding: var(--gutter-clamp-xl);
    }

    @keyframes glow {
        0% {
            background-color: var(--color-link);
            box-shadow: inset 0 0 2rem 1rem oklch(from var(--color-link) l c h / 90%);
        }

        75% {
            box-shadow: none;
        }

        100% {
            background-color: oklch(from var(--color-link) l c h / 50%);
        }
    }
</style>
